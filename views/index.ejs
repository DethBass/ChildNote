<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">


    <title>ChildNote</title>
  </head>
  <body>
    <div class="container">
      <div class="shadow-lg pb-3 mb mb-5 bg-body rounded">
        <h4>Datos del Alumno</h4>
        <form action="/crear" method="POST">
          <div class="col-md-6">
            <label for="rut" class="form-label">Rut</label>
            <input id="rut" name="rut" type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre</label>
            <input id="nombre" name="nombre" type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="fechadenac" class="form-label">Fecha de Nacimiento</label>
            <input id="fechadenac" name="fechadenac" type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="curso" class="form-label">Curso</label>
            <select id="curso" name="curso" type="text" class="form-control" required>
             <option value="Primero Medio">Primero Medio</option>
                  <option value="Segundo Medio">Segundo Medio</option>
                  <option value="Tercero Medio">Tercero Medio</option>
                  <option value="Cuarto Medio">Cuarto Medio</option>
                </select>
          </div>
          <div class="col-md-6">
            <label for="jornada" class="form-label">Jornada</label>
            <select id="jornada" name="jornada" type="text" class="form-control" required>
              <option value="Mañana">Mañana</option>
              <option value="Mañana-Tarde">Mañana-Tarde</option>
            </select>
          </div>
          <br><br>
          <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"></i>Registrar Alumnos</button><br>
        </form>
        <table id="tablaAlumnos" class="table mt-4">
          <thead>
            <tr>
              <th style="display: none;">ID</th>
              <th>Rut</th>
              <th>Nombre</th>
              <th>Fecha de Nacimiento</th>
              <th>Curso</th>
              <th>Jornada</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% alumnos.forEach( (alumno) => { %>
              <tr>
              <td style="display: none;"><%= alumno._id %></td>
              <td><%= alumno.rut %></td>
              <td><%= alumno.nombre %></td>
              <td><%= alumno.fechadenac %></td>
              <td><%= alumno.curso %></td>
              <td><%= alumno.jornada %></td>
              <td>
                <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                <a href="/borrar/<%= alumno._id %>" class="btn btn-outline-danger bi bi-trash"></a>
              </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      
      
    </div>
    <div class="modal fade" id="modalAlumno" tabindex="-1" aria-labelledby="modalAlumno" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="exampleModalLabel">Editar Info</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/editar" method="POST">
              <input name="id_editar" id="id_editar" type="text" hidden>
              <div class="mb-3">
                <label for="rut_editar" class="col-form-label">Rut:</label>
                <input id="rut_editar" name="rut_editar" type="text" class="form-control" value="">
              </div>
              <div class="mb-3">
                <label for="nombre_editar" class="col-form-label">Nombre:</label>
                <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
              </div>
              <div class="mb-3">
                <label for="fechadenac_editar" class="col-form-label">Fecha de nacimiento:</label>
                <input id="fechadenac_editar" name="fechadenac_editar" type="text" class="form-control" value="">
              </div>
              <div class="mb-3">
                <label for="curso_editar" class="col-form-label">Curso:</label>
                <select id="curso_editar" name="curso_editar" type="text" class="form-control">
                  <option value="Primero Medio">Primero Medio</option>
                  <option value="Segundo Medio">Segundo Medio</option>
                  <option value="Tercero Medio">Tercero Medio</option>
                  <option value="Cuarto Medio">Cuarto Medio</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="jornada_editar" class="col-form-label">Jornada:</label>
                <select id="jornada_editar" name="jornada_editar" type="text" class="form-control" value="">
                  <option value="Mañana">Mañana</option>
                  <option value="Mañana-Tarde">Mañana-Tarde</option>
                </select>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Actualizar</button>
              </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>

  </body>
</html>